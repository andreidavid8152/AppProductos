<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.NuevoProducto"
             Title="NuevoProducto">
    <VerticalStackLayout>

        <!-- Formulario de ingreso de producto -->
        <TableView>
            <TableRoot>
                <TableSection Title="Ingrese un nuevo producto">
                    <EntryCell x:Name="Nombre"
                               Placeholder="Nombre"/>

                    <EntryCell x:Name="Cantidad"
                               Placeholder="Cantidad"/>

                    <EntryCell x:Name="Descripcion"
                               Placeholder="Descripcion"/>
                </TableSection>
            </TableRoot>
        </TableView>

        <Button Text="Guardar Producto"
                FontSize="15"
                HorizontalOptions="Center"
                Scale="1"
                Margin="5"
                Clicked="OnClickGuardarNuevoProducto"/>

    </VerticalStackLayout>
</ContentPage>